= form_for @product_category do |f|
  = f.error_messages
  = field_set_tag t(:product_category_details) do
    .splitContainer
      %dl.half
        %dt= f.label :name , t(:name)
        %dd= f.text_field :name, :class => 'focus text'
      %dl.half
        %dt= f.label :permalink , t(:permalink)
        %dd= f.text_field :permalink, :class => 'text'
    %dl
      %dt= f.label :description , t(:description)
      %dd= f.text_area :description, :class => 'text'
  = field_set_tag t(:attachments) do

    %dl
      %dt= f.label :image, t(:image)
      %dd
        - if @product_category.image
          .attachmentPreview.image
            .imgContainer
              .img{style: "background-image:url(#{@product_category.image.url})"}
            .desc
              %span.filename= @product_category.image.file_name
              %span.delete= delete_image_link(@product_category.image)
        %p= f.file_field :image

  %p.submit
    - unless @product_category.new_record?
      %span.right= link_to t(:delete), @product_category, :class => 'button purple', :method => :delete, :data => {:confirm => t(:product_category_delete_confirm)}
    = f.submit :class => 'button green'
    = link_to t(:cancel), :product_categories, :class => 'button'
