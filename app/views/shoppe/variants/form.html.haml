- @page_title = t(:variant_of , :product => @product.name)
= content_for :header do
  %p.buttons= link_to t(:variants_back), [@product, :variants], :class => 'button'
  %h2.products= t(:variant_of , :product => @product.name)

= form_for [@product, @variant], :url => @variant.new_record? ? product_variants_path(@product) : product_variant_path(@product, @variant), :html => {:multipart => true} do |f|
  = f.error_messages
  = field_set_tag t(:product_info) do
    .splitContainer
      %dl.third
        %dt= f.label :name , t(:name)
        %dd= f.text_field :name, :class => 'text focus'
      %dl.third
        %dt= f.label :permalink , t(:permalink)
        %dd= f.text_field :permalink, :class => 'text'
      %dl.third
        %dt= f.label :sku, t(:sku)
        %dd= f.text_field :sku, :class => 'text'

  = field_set_tag t(:image) do
    %dl
      - @variant.images.each do |image|
        %dd
          .attachmentPreview.image
            .imgContainer
              .img{style: "background-image:url(#{image.url})"}
            .desc
              %span.filename= f.label image.file_name
              %span.delete= delete_image_link(image)
      %p= f.file_field :images, multiple: true, name: 'images[file][]'

  = field_set_tag t(:pricing) do
    .splitContainer
      %dl.third
        %dt= f.label :price, t(:price)
        %dd= f.text_field :price, :class => 'text'
      %dl.third
        %dt= f.label :cost_price, t(:cost_price)
        %dd= f.text_field :cost_price, :class => 'text'
      %dl.third
        %dt= f.label :tax_rate_id , t(:tax_rate)
        %dd= f.collection_select :tax_rate_id, Shoppe::TaxRate.ordered, :id, :description, {:include_blank => true}, {:class => 'chosen-with-deselect', :data => {:placeholder => "No tax"}}

  = field_set_tag t(:stock_control) do
    .splitContainer
      %dl.half
        %dt= f.label :weight, t(:weight)
        %dd= f.text_field :weight, :class => 'text'

      %dl.half
        %dt= f.label :stock_control, t(:stock_control)
        %dd.checkbox
          = f.check_box :stock_control
          = f.label :stock_control, t(:stock_control_enable)

  = field_set_tag t(:website_properties) do
    .splitContainer
      %dl.half
        %dt= f.label :active, t(:on_sale)
        %dd.checkbox
          = f.check_box :active
          = f.label :active, t(:on_sale_help)
      %dl.half
        %dt= f.label :default, t(:is_default_variant)
        %dd.checkbox
          = f.check_box :default
          = f.label :default, t(:is_default_variant_help)

  %p.submit
    - unless @variant.new_record?
      %span.right= link_to t(:delete), product_variant_path(@product, @variant), :class => 'button purple', :method => :delete, :data => {:confirm => t(:variant_delete_confirm)}
    = f.submit t(:variant_save), :class => 'button green'
    = link_to t(:cancel), :products, :class => 'button'
